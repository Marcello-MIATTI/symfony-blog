{% extends 'layout.html.twig' %}

{% block title %} {{parent()}} - Auteurs {% endblock %}

{% block content %}
 <div class="row d-flex justify-content-center text-center">   
    {% for auteur in auteurs %}    
        <div class="card m-1" style="width: 18rem;">
            <div class="card-body">
            <div> <a href="{{ path("update_auteur", {id:auteur.id} )}}"><i class="fas fa-edit mx-1 text-success"></i></a></div>
            <div> <a href="{{ path("delete_auteur", {id:auteur.id} )}}"><i class="fas fa-trash mx-1 text-danger"
            onclick="return confirm('Etes-vous sûr de vouloir supprimer l\'article ?')"></i></a>
            </div>
            <h5 class="card-title">Auteur : {{ auteur.nom }}</h5>
            <h5 class="card-title">Auteur : {{ auteur.prenom }}</h5>
            <h5 class="card-title">Date de Naissance : {{ auteur.dateDeNaissance | date("d/m/y \à H\\hi")}}</h5>
            <p class="card-text">Bio : 
                {{auteur.biographie | slice(0, 150)}} ....<a href=""> lire la suite </a></p>
            </div>
        </div>
        {% endfor %}
 </div>   
 {% endblock %}